{
  "name": "movie-library",
  "version": "1.0.0",
  "description": "Example of Graphql in Node.js",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "start-dist": "node dist/main.js",
    "test": "jest",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json && npm run build-view",
    "build-view": "copyfiles -u 2 src/views/* dist/views",
    "migrate": "sequelize-cli db:migrate",
    "migrate-reset": "sequelize-cli db:migrate:undo:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfnajid/movie-library.git"
  },
  "keywords": [
    "node",
    "graphql",
    "apollo",
    "sequelize"
  ],
  "author": "rfnajid",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rfnajid/movie-library/issues"
  },
  "homepage": "https://github.com/rfnajid/movie-library#readme",
  "dependencies": {
    "@apollo/server": "^4.3.2",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-resolvers": "^0.4.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.9.0",
    "sequelize": "^6.28.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/sequelize": "^4.28.14",
    "copyfiles": "^2.4.1",
    "jest": "^29.4.1",
    "mkdirp": "^2.1.3",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "sequelize-cli": "^6.6.0",
    "ts-jest": "^29.0.5",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  }
}
